                <TextView
                    android:id="@+id/aimLipid"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="4dp"
                    android:ems="10"
                    app:layout_constraintBottom_toBottomOf="@+id/aimLipidTag"
                    app:layout_constraintStart_toEndOf="@+id/aimLipidTag" />

                <TextView
                    android:id="@+id/aimLipid_g"
                    style="@style/BaseTextTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:text="@string/gram"
                    android:textSize="24sp"
                    app:layout_constraintBottom_toBottomOf="@+id/aimLipid"
                    app:layout_constraintStart_toEndOf="@+id/aimLipid" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </TableRow>
    </TableLayout>


</LinearLayout>