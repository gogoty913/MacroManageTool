                    android:ems="10"
                    app:layout_constraintBottom_toBottomOf="@+id/intakeLipidTag"
                    app:layout_constraintStart_toEndOf="@+id/intakeLipidTag" />

                <TextView
                    android:id="@+id/intakeLipid_g"
                    style="@style/BaseTextTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:text="@string/gram"
                    android:textSize="24sp"
                    app:layout_constraintBottom_toBottomOf="@+id/intakeLipid"
                    app:layout_constraintStart_toEndOf="@+id/intakeLipid" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </TableRow>

        <TableRow
            android:id="@+id/nullTableRow"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/nullTable"
                style="@style/BaseTextTheme"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
